<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="di_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">di.res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='account_vendor_bills']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="vendor_bill_amount_allocation">
                    <div class="o_setting_left_pane">
                        <field name="add_invoice_allocate_difference_line"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="add_invoice_allocate_difference_line" />
                        <div class="text-muted">
                            An extra Difference Line will be added on allocation for the unallocable amount
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
